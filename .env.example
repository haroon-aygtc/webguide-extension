# Example environment variables required to run the app locally or in production
# Copy this file to `.env` and fill in the values.

# Google / Gemini API key (server-side). Prefer using a server-side secret only.
GOOGLE_AI_API_KEY=

# Service API key for authenticating API requests (required)
SERVICE_API_KEY=your-secure-api-key-here

# Public key variant (only if intentionally exposed to client; generally avoid)
NEXT_PUBLIC_GOOGLE_AI_API_KEY=

# Supabase (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Redis configuration for rate limiting
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# Metrics Configuration
DD_ENABLED=false
DD_ENV=production
DD_SERVICE=tempo-assistant
COST_ALERT_THRESHOLD=50.0

# Stripe (optional)
STRIPE_SECRET_KEY=

# Any other secrets used by your deployment
# EXAMPLE_OTHER_SECRET=
